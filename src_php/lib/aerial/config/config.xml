<?xml version="1.0" encoding="utf-8"?>
<config>
    <debug-mode>true</debug-mode>

    <paths>
        <project>C:/UniServer/www/open-source/aerial-test</project>
        <aerial>src_php/lib/aerial</aerial>
        <amfphp>src_php/public_html/amfphp/core</amfphp>
        <doctrine>src_php/lib/doctrine</doctrine>
        <internal-services>src_php/lib/services</internal-services>
    </paths>

    <!-- package structure to be concatenated when used, e.g. org.aerial.vo or org.aerial.services -->
    <code-generation>
        <php>src_php/model</php>
        <as3>src_flex</as3>
    </code-generation>

    <options>
        <directory-mode>0666</directory-mode>
        <file-mode>0664</file-mode>
        <use-arraycollection>true</use-arraycollection>
        <use-authentication>false</use-authentication>

        <package>org.aerial</package>
        <models-folder>vo</models-folder>
        <services-folder>services</services-folder>

        <vo>VO</vo>
        <service>Service</service>
    </options>

    <server-url>http://aerial-test/server.php</server-url>

    <database use="development">
        <development>
            <engine>mysql</engine>
            <host>localhost</host>
            <database>aerial_forum</database>
            <username>aerial</username>
            <password>secret</password>
        </development>

        <production>
            <engine>mysql</engine>
            <host>localhost</host>
            <database>aerial_forum</database>
            <username>aerial</username>
            <password>secret</password>
        </production>
    </database>
</config>