<?xml version="1.0" encoding="UTF-8"?>
<access-control>
    <!-- Access Groups-->
    <groups>
        <group name="General" role="safe" encryption="sha1|md5|none">
            <user name="danny" password="12345"/>
            <user name="rob" password="54321" override="admin"/>
        </group>
        <group name="External" role="trusted" encryption="sha1|md5|none">
            <user name="joe" password="ABCDE"/>
        </group>
    </groups>
    
    <roles>
        <!-- Sample role: Safe - block all sensitive or potentially dangerous actions-->
        <role name="safe" default-rule="allow" list-rule="deny">
            <service name="SecureService"/>
            <function name="UserService.destroy()"/>
            <function name="UserService.getSensitiveData()"/>
            <member name="User.password"/>
        </role>
        
        <!-- Sample role: Unsafe - allow all sensitive or potentially dangerous actions-->
        <role name="admin" default-rule="allow"/>
        
        <!-- Sample role: Trusted - allow some sensitive data, deny dangerous actions-->
        <role name="trusted" default-rule="allow" list-rule="deny">
            <service name="SecureService"/>
            <function name="UserService.destroy()"/>
            <function name="UserService.getSensitiveData()" override="allow"/>
            <member name="User.password" override="allow"/>
        </role>
    </roles>
    
    <rules>
        <!-- built-in rules -->
        <rule name="allow"/>
        <rule name="deny"/>
        
        <!-- custom rules -->
        <rule name="ip-filter"/>
        <rule name="geo-filter"/>
    </rules>
</access-control>